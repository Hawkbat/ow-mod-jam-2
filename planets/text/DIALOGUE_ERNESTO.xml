<DialogueTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/xen-42/outer-wilds-new-horizons/main/NewHorizons/Schemas/dialogue_schema.xsd">
	<NameField>Ernesto</NameField>

	<DialogueNode>
		<Name>START</Name>
		<EntryCondition>DEFAULT</EntryCondition>
		<Dialogue>
			<Page>Hey it's me Ernesto the magic talking anglerfish.</Page>
		</Dialogue>

		<DialogueOptionsList>
			<DialogueOption>
				<Text>Do you say that every time?</Text>
				<DialogueTarget>1</DialogueTarget>
			</DialogueOption>
			<DialogueOption>
				<Text>Aren't you usually... bigger?</Text>
				<DialogueTarget>2</DialogueTarget>
			</DialogueOption>
			<DialogueOption>
				<Text>Catch you later.</Text>
				<DialogueTarget>4</DialogueTarget>
			</DialogueOption>
		</DialogueOptionsList>
	</DialogueNode>
	
	<DialogueNode>
		<Name>1</Name>
		<Dialogue>
			<Page>Of course! It's basically my catchphrase at this point.</Page>
		</Dialogue>
		<DialogueOptionsList>
			<DialogueOption>
				<Text>Nice.</Text>
				<DialogueTarget>START</DialogueTarget>
			</DialogueOption>
		</DialogueOptionsList>
	</DialogueNode>

	<DialogueNode>
		<Name>2</Name>
		<Dialogue>
			<Page>That's kind of insulting, you know. I'm really sensitive about that.</Page>
		</Dialogue>
		<DialogueOptionsList>
			<DialogueOption>
				<Text>Oh, sorry.</Text>
				<DialogueTarget>3</DialogueTarget>
			</DialogueOption>
		</DialogueOptionsList>
	</DialogueNode>

	<DialogueNode>
		<Name>3</Name>
		<Dialogue>
			<Page>But anyway, I'm hiding from the hoppers. They kind of terrify me.</Page>
		</Dialogue>
		<DialogueOptionsList>
			<DialogueOption>
				<Text>Me too, buddy.</Text>
				<DialogueTarget>START</DialogueTarget>
			</DialogueOption>
		</DialogueOptionsList>
	</DialogueNode>

	<DialogueNode>
		<Name>4</Name>
		<Dialogue>
			<Page>Bye bye!</Page>
		</Dialogue>
	</DialogueNode>

</DialogueTree>